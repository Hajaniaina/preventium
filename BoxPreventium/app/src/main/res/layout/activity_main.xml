<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GOOGLE MAP -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:cameraTilt="90"
        map:mapType="normal"
        map:uiCompass="false"
        tools:layout="@layout/dummy">
    </fragment>


    <ImageView android:id="@+id/no_map"
        android:visibility="invisible"
        android:layout_width="96.0dip"
        android:layout_height="96.0dip"
        android:src="@mipmap/ic_nomap"
        android:layout_centerInParent="true" />


    <ImageView android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/screen_background_light"
        android:backgroundTint="@color/colorAppRed"
        android:alpha=".75"
        android:visibility="invisible"/>

    <!-- DEBUG -->
    <LinearLayout android:id="@+id/debug_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="186dp"
        android:layout_marginBottom="10dp"
        android:focusableInTouchMode="false"
        android:visibility="gone">

        <ScrollView android:id="@+id/debugScroller"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1">

            <TextView android:id="@+id/debug_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </ScrollView>

    </LinearLayout>

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- SCORE WIDGETS -->
        <LinearLayout
            android:id="@+id/score_layout"
            android:layout_width="@dimen/score_layout_width"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="@dimen/score_layout_margin_start"
            android:layout_marginTop="@dimen/score_layout_margin_top"
            android:gravity="top|start"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:id="@+id/layout_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/corner_note_view"
                    android:layout_width="@dimen/score_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="@dimen/score_margin_top1"
                    android:height="@dimen/score_layout_height"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/colorAppGrey"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:shadowColor="#757575"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/corner_note_string"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/score_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/corner_image"
                    android:layout_width="35dp"
                    android:layout_height="@dimen/score_layout_height"
                    android:layout_marginStart="-20dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_brake"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/score_layout_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/brake_note_view"
                    android:layout_width="@dimen/score_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/score_margin_top2"
                    android:height="@dimen/score_layout_height"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/colorAppGrey"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:shadowColor="#757575"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/brake_note_string"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/score_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/brake_image"
                    android:layout_width="35dp"
                    android:layout_height="@dimen/score_layout_height"
                    android:layout_marginStart="-20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_acc"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/score_layout_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/acc_note_view"
                    android:layout_width="@dimen/score_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/score_margin_top2"
                    android:height="@dimen/score_layout_height"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/colorAppGrey"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:shadowColor="#757575"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/acc_note_string"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/score_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/acc_image"
                    android:layout_width="35dp"
                    android:layout_height="@dimen/score_layout_height"
                    android:layout_marginStart="-20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_avg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/score_layout_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/avg_note_view"
                    android:layout_width="@dimen/score_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/score_margin_top2"
                    android:height="@dimen/score_layout_height"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/colorAppGrey"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:shadowColor="#757575"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/avg_note_string"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/score_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/avg_image"
                    android:layout_width="22dp"
                    android:layout_height="@dimen/score_layout_height"
                    android:layout_marginStart="-13dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/driving_time_text"
                android:layout_width="@dimen/score_layout_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/score_margin_top2"
                android:height="@dimen/score_layout_height"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:backgroundTint="@color/colorAppGrey"
                android:elevation="2dp"
                android:gravity="center"
                android:shadowColor="#757575"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="0:00"
                android:textColor="#ffffff"
                android:textSize="@dimen/driving_time_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/box_num_connected"
                android:layout_width="@dimen/score_layout_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/score_margin_top2"
                android:height="@dimen/score_layout_height"
                android:elevation="2dp"
                android:gravity="center"
                android:shadowColor="#757575"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="0"
                android:textColor="#ff0000"
                android:textSize="@dimen/box_num_text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- SPEED INFO/LIMIT WIDGETS -->
        <LinearLayout
            android:id="@+id/speed_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="@dimen/speed_layout_margin_start"
            android:layout_marginTop="@dimen/speed_layout_margin_top"
            android:orientation="vertical"
            tools:layout_marginStart="0dp">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/speed2_view"
                android:layout_width="@dimen/speed_layout_width"
                android:layout_height="@dimen/speed_layout_height"
                android:layout_marginTop="@dimen/speed_margin_top1"
                CircleProgressView:cpv_autoTextSize="false"
                CircleProgressView:cpv_barColor="@color/colorAppGrey"
                CircleProgressView:cpv_barWidth="@dimen/speed_rim_width"
                CircleProgressView:cpv_fillColor="#4Dffffff"
                CircleProgressView:cpv_innerContourColor="#00ffffff"
                CircleProgressView:cpv_innerContourSize="1dp"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_outerContourColor="#00ffffff"
                CircleProgressView:cpv_outerContourSize="1dp"
                CircleProgressView:cpv_rimColor="#00000000"
                CircleProgressView:cpv_rimWidth="@dimen/speed_rim_width"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/colorAppGrey"
                CircleProgressView:cpv_textColor="@color/material_grey800"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_textSize="@dimen/speed_text_size"
                CircleProgressView:cpv_unit="@string/straights_caps_string"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_unitSize="9sp"
                CircleProgressView:cpv_value="0" />

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/speed1_view"
                android:layout_width="@dimen/speed_layout_width"
                android:layout_height="@dimen/speed_layout_height"
                android:layout_marginTop="@dimen/speed_margin_top2"
                CircleProgressView:cpv_autoTextSize="false"
                CircleProgressView:cpv_barColor="@color/colorAppGrey"
                CircleProgressView:cpv_barWidth="@dimen/speed_rim_width"
                CircleProgressView:cpv_fillColor="#4Dffffff"
                CircleProgressView:cpv_innerContourColor="#00ffffff"
                CircleProgressView:cpv_innerContourSize="1dp"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_outerContourColor="#00ffffff"
                CircleProgressView:cpv_outerContourSize="1dp"
                CircleProgressView:cpv_rimColor="#00000000"
                CircleProgressView:cpv_rimWidth="@dimen/speed_rim_width"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/colorAppGrey"
                CircleProgressView:cpv_textColor="@color/material_grey800"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_textSize="@dimen/speed_text_size"
                CircleProgressView:cpv_unit="@string/corners_caps_string"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_unitSize="10sp"
                CircleProgressView:cpv_value="0" />

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/speed3_view"
                android:layout_width="@dimen/speed_layout_width"
                android:layout_height="@dimen/speed_layout_height"
                android:layout_marginTop="@dimen/speed_margin_top2"
                CircleProgressView:cpv_autoTextSize="false"
                CircleProgressView:cpv_barColor="@color/colorAppGrey"
                CircleProgressView:cpv_barWidth="@dimen/speed_rim_width"
                CircleProgressView:cpv_fillColor="#4Dffffff"
                CircleProgressView:cpv_innerContourColor="@color/material_grey400"
                CircleProgressView:cpv_innerContourSize="1dp"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_outerContourColor="@color/material_grey500"
                CircleProgressView:cpv_outerContourSize="1dp"
                CircleProgressView:cpv_rimColor="#00000000"
                CircleProgressView:cpv_rimWidth="@dimen/speed_rim_width"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="false"
                CircleProgressView:cpv_spinColor="@color/colorAppGrey"
                CircleProgressView:cpv_textColor="@color/material_grey800"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_textSize="@dimen/speed_text_size"
                CircleProgressView:cpv_value="0" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- ACC FORCES & DRIVING SCORE WIDGETS -->
        <LinearLayout
            android:id="@+id/layout_on_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <!-- note -->
            <LinearLayout
                android:id="@+id/force_layout"
                android:layout_width="@dimen/force_layout_width2"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/force_layout_margin_top"
                android:baselineAligned="false"
                android:orientation="vertical"
                tools:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/driving_score_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/force_layout_height2"
                    android:layout_marginStart="@dimen/driving_score_layout_margin_start"
                    android:layout_marginTop="@dimen/driving_score_layout_margin_top"
                    android:background="@drawable/text_border_gray"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:shadowColor="@color/material_grey600"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="0"
                    android:textColor="@color/colorAppGrey"
                    android:textSize="@dimen/driving_score_text_size"
                    android:textStyle="bold"
                    tools:layout_marginStart="0dp" />

                <ImageView
                    android:id="@+id/acc_force_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/force_layout_height2"
                    android:layout_marginStart="@dimen/driving_score_layout_margin_start"
                    android:layout_marginTop="@dimen/driving_score_layout_margin_top"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/colorAppGrey"
                    android:elevation="0dp"
                    android:gravity="center"
                    tools:layout_marginStart="0dp" />

                <LinearLayout
                    android:id="@+id/force_layouts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/force_layout_margin_top"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/action_menu_padding_bottom">

                    <TextView
                        android:id="@id/mark"
                        android:layout_width="@dimen/force_layout_height2"
                        android:layout_height="@dimen/force_layout_height2"
                        android:layout_marginStart="@dimen/driving_score_layout_margin_start"
                        android:layout_marginTop="@dimen/driving_score_layout_margin_top"
                        android:background="@drawable/rounded_textview"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="24.0sp"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <!-- floating button -->
            <RelativeLayout
                android:id="@+id/buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/buttons_layout_margin_bottom"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/buttons_layout_margin_top"
                android:orientation="vertical"
                android:padding="0dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="top"
                    >
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/menu_button_sos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="@dimen/float_button_scaleX"
                        android:scaleY="@dimen/float_button_scaleY"
                        android:src="@drawable/ic_sos"
                        fab:fab_colorNormal="@color/colorAppRed"
                        fab:fab_colorPressed="@color/colorAppGreen"
                        fab:fab_colorRipple="#ffee58"
                        fab:fab_label=""
                        fab:fab_shadowColor="#444"
                        fab:fab_size="@dimen/fb_button_size" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/button_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/buttons_margin_top3"
                        android:scaleX="@dimen/float_button_scaleX"
                        android:scaleY="@dimen/float_button_scaleY"
                        android:src="@drawable/ic_phone"
                        fab:fab_colorNormal="@color/colorAppGrey"
                        fab:fab_colorPressed="@color/colorAppRed"
                        fab:fab_colorRipple="#ff5252"
                        fab:fab_shadowColor="#444"
                        fab:fab_size="@dimen/fb_button_size" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/menu_button_reset_calibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/buttons_margin_top3"
                        android:scaleX="@dimen/float_button_scaleX"
                        android:scaleY="@dimen/float_button_scaleY"
                        android:src="@drawable/quantum_ic_refresh_white_24"
                        android:visibility="invisible"
                        fab:fab_colorNormal="@color/colorAppGrey"
                        fab:fab_colorPressed="@color/colorAppRed"
                        fab:fab_colorRipple="#ffee58"
                        fab:fab_label=""
                        fab:fab_shadowColor="#444"
                        fab:fab_size="@dimen/fb_button_size" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/menu_button_map_recenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/buttons_margin_top3"
                        android:scaleX="@dimen/float_button_scaleX"
                        android:scaleY="@dimen/float_button_scaleY"
                        android:src="@drawable/ic_map_marker"
                        fab:fab_colorNormal="@color/colorAppGrey"
                        fab:fab_colorPressed="@color/colorAppRed"
                        fab:fab_colorRipple="#ff5252"
                        fab:fab_shadowColor="#444"
                        fab:fab_size="@dimen/fb_button_size" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/stop_parcour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/buttons_margin_top3"
                        android:gravity="center"
                        android:scaleX="@dimen/float_button_scaleX"
                        android:scaleY="@dimen/float_button_scaleY"
                        android:src="@drawable/ic_stop_black_24dp"
                        fab:fab_colorNormal="@color/colorAppGrey"
                        fab:fab_colorPressed="@color/colorAppRed"
                        fab:fab_colorRipple="#ffee58"
                        fab:fab_label=""
                        fab:fab_shadowColor="#444"
                        fab:fab_size="@dimen/fb_button_size" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginEnd="@dimen/menu_float_button_bottom"
                    >
                    <!-- ACTION MENU -->
                    <com.github.clans.fab.FloatingActionMenu
                        android:id="@+id/opt_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="0dp"
                        android:paddingBottom="0dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:scaleX="@dimen/float_button_scaleX"
                        android:scaleY="@dimen/float_button_scaleY"
                        fab:menu_animationDelayPerItem="0"
                        fab:menu_buttonSpacing="@dimen/action_menu_button_spacing"
                        fab:menu_colorNormal="@color/colorAppGrey"
                        fab:menu_colorPressed="@color/colorAppRed"
                        fab:menu_colorRipple="#ffee58"
                        fab:menu_fab_size="@dimen/fb_button_size"
                        fab:menu_icon="@drawable/dots_vertical"
                        fab:menu_labels_ellipsize="end"
                        fab:menu_labels_position="left"
                        fab:menu_labels_singleLine="false"
                        fab:menu_openDirection="up"
                        fab:menu_shadowColor="#444">

                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/button_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/buttons_margin_top1"
                            android:scaleX="@dimen/float_button_scaleX"
                            android:scaleY="@dimen/float_button_scaleY"
                            android:src="@drawable/ic_info"
                            fab:fab_colorNormal="@color/colorAppGrey"
                            fab:fab_colorPressed="@color/colorAppRed"
                            fab:fab_colorRipple="#ff5252"
                            fab:fab_shadowColor="#444"
                            fab:fab_size="@dimen/fb_button_size" />


                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/menu_button_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="@dimen/float_button_scaleX"
                            android:scaleY="@dimen/float_button_scaleY"
                            android:src="@drawable/ic_lock"
                            fab:fab_colorNormal="@color/colorAppGrey"
                            fab:fab_colorPressed="@color/colorAppRed"
                            fab:fab_colorRipple="#ffee58"
                            fab:fab_label=""
                            fab:fab_shadowColor="#444"
                            fab:fab_size="@dimen/fb_button_size" />

                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/button_epc_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/buttons_margin_top2"
                            android:scaleX="@dimen/float_button_scaleX"
                            android:scaleY="@dimen/float_button_scaleY"
                            android:src="@drawable/ic_settings"
                            fab:fab_colorNormal="@color/colorAppGrey"
                            fab:fab_colorPressed="@color/colorAppRed"
                            fab:fab_colorRipple="#ff5252"
                            fab:fab_shadowColor="#444"
                            fab:fab_size="@dimen/fb_button_size" />

                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/button_qrcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/buttons_margin_top2"
                            android:scaleX="@dimen/float_button_scaleX"
                            android:scaleY="@dimen/float_button_scaleY"
                            android:src="@drawable/ic_qrcode"
                            fab:fab_colorNormal="@color/colorAppGrey"
                            fab:fab_colorPressed="@color/colorAppRed"
                            fab:fab_colorRipple="#ff5252"
                            fab:fab_shadowColor="#444"
                            fab:fab_size="@dimen/fb_button_size" />

                    </com.github.clans.fab.FloatingActionMenu>
                </LinearLayout>
            </RelativeLayout>

            <!-- formateur bouton -->
            <LinearLayout
                android:id="@+id/layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/button_conducteur"
                    android:layout_width="@dimen/button_right_width"
