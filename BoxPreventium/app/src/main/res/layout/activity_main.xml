<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GOOGLE MAP -->
    <fragment android:id="@+id/map"
          android:name="com.google.android.gms.maps.SupportMapFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          map:cameraTilt="90"
          map:mapType="normal"
          map:uiCompass="false"
          tools:layout="@layout/activity_main">
    </fragment>

    <!-- MAIN CONTENT -->
    <LinearLayout android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- SCORE WIDGETS -->
        <LinearLayout android:id="@+id/score_layout"
                      android:orientation="vertical"
                      android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="top|start"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="10dp">

            <TextView android:id="@+id/corner_note_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="12dp"
                      android:height="80dp"
                      android:gravity="center"
                      android:elevation="4dp"
                      android:background="@android:drawable/dialog_holo_light_frame"
                      android:backgroundTint="@color/colorAppGrey"
                      android:shadowColor="#757575"
                      android:text="V"
                      android:textColor="#ffffff"
                      android:textSize="36sp"
                      android:textStyle="bold"
                      android:shadowDx="1"
                      android:shadowDy="1"
                      android:shadowRadius="2"/>

            <TextView android:id="@+id/brake_note_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="18dp"
                      android:height="80dp"
                      android:gravity="center"
                      android:elevation="4dp"
                      android:background="@android:drawable/dialog_holo_light_frame"
                      android:backgroundTint="@color/colorAppGrey"
                      android:shadowColor="#757575"
                      android:text="F"
                      android:textColor="#ffffff"
                      android:textSize="36sp"
                      android:textStyle="bold"
                      android:shadowDx="1"
                      android:shadowDy="1"
                      android:shadowRadius="2"/>

            <TextView android:id="@+id/acc_note_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="18dp"
                      android:height="80dp"
                      android:gravity="center"
                      android:elevation="4dp"
                      android:background="@android:drawable/dialog_holo_light_frame"
                      android:backgroundTint="@color/colorAppGrey"
                      android:shadowColor="#757575"
                      android:text="A"
                      android:textColor="#ffffff"
                     android:textSize="36sp"
                      android:textStyle="bold"
                      android:shadowDx="1"
                      android:shadowDy="1"
                      android:shadowRadius="2"/>

            <TextView android:id="@+id/avg_note_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="18dp"
                      android:height="80dp"
                      android:gravity="center"
                      android:elevation="4dp"
                      android:background="@android:drawable/dialog_holo_light_frame"
                      android:backgroundTint="@color/colorAppGrey"
                      android:shadowColor="#757575"
                      android:text="M"
                      android:textColor="#ffffff"
                      android:textSize="36sp"
                      android:textStyle="bold"
                      android:shadowDx="1"
                      android:shadowDy="1"
                      android:shadowRadius="2"/>

            <TextView android:id="@+id/driving_time_text"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="18dp"
                      android:height="80dp"
                      android:gravity="center"
                      android:elevation="4dp"
                      android:background="@android:drawable/dialog_holo_light_frame"
                      android:backgroundTint="@color/colorAppGrey"
                      android:shadowColor="#757575"
                      android:shadowDx="1"
                      android:shadowDy="1"
                      android:shadowRadius="2"
                      android:textColor="#ffffff"
                      android:textSize="28sp"
                      android:textStyle="bold"
                      android:text="0:00"/>

        </LinearLayout>

        <!-- SPEED INFO/LIMIT WIDGETS -->
        <LinearLayout android:id="@+id/speed_info_layout"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="24dp">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/speed1_view"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                CircleProgressView:cpv_barWidth="10dp"
                CircleProgressView:cpv_innerContourSize="1dp"
                CircleProgressView:cpv_outerContourSize="1dp"
                CircleProgressView:cpv_barColor="@color/colorAppGrey"
                CircleProgressView:cpv_rimColor="#00000000"
                CircleProgressView:cpv_fillColor="#a0ffffff"
                CircleProgressView:cpv_outerContourColor="@color/material_grey400"
                CircleProgressView:cpv_innerContourColor="@color/material_grey400"
                CircleProgressView:cpv_rimWidth="10dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="false"
                CircleProgressView:cpv_spinColor="@color/colorAppGrey"
                CircleProgressView:cpv_autoTextSize="false"
                CircleProgressView:cpv_textColor="@color/material_grey800"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_value="0" />

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/speed2_view"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                CircleProgressView:cpv_barWidth="10dp"
                CircleProgressView:cpv_innerContourSize="1dp"
                CircleProgressView:cpv_outerContourSize="1dp"
                CircleProgressView:cpv_barColor="@color/colorAppGrey"
                CircleProgressView:cpv_rimColor="#00000000"
                CircleProgressView:cpv_fillColor="#a0ffffff"
                CircleProgressView:cpv_outerContourColor="@color/material_grey400"
                CircleProgressView:cpv_innerContourColor="@color/material_grey400"
                CircleProgressView:cpv_rimWidth="10dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="false"
                CircleProgressView:cpv_spinColor="@color/colorAppGrey"
                CircleProgressView:cpv_autoTextSize="false"
                CircleProgressView:cpv_textColor="@color/material_grey800"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_value="0" />

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/speed3_view"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                CircleProgressView:cpv_barWidth="10dp"
                CircleProgressView:cpv_innerContourSize="1dp"
                CircleProgressView:cpv_outerContourSize="1dp"
                CircleProgressView:cpv_barColor="@color/colorAppGrey"
                CircleProgressView:cpv_rimColor="#00000000"
                CircleProgressView:cpv_fillColor="#a0ffffff"
                CircleProgressView:cpv_outerContourColor="@color/material_grey400"
                CircleProgressView:cpv_innerContourColor="@color/material_grey400"
                CircleProgressView:cpv_rimWidth="10dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="false"
                CircleProgressView:cpv_spinColor="@color/colorAppGrey"
                CircleProgressView:cpv_autoTextSize="false"
                CircleProgressView:cpv_textColor="@color/material_grey800"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_value="0" />

        </LinearLayout>

        <RelativeLayout android:id="@+id/actions_layout"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

            <!-- ACC FORCES & DRIVING SCORE WIDGETS -->
            <LinearLayout android:id="@+id/force_layout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="12dp"
                android:layout_marginStart="540dp"
                android:layout_marginEnd="10dp">

                <TextView android:id="@+id/driving_score_view"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:background="@drawable/text_border_grey"
                    android:elevation="4dp"
                    android:textColor="@color/colorAppGrey"
                    android:textSize="48sp"
                    android:text="0"
                    android:textStyle="bold"
                    android:shadowColor="@color/material_grey600"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>

                <ImageView android:id="@+id/acc_force_view"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:elevation="4dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/colorAppGrey"/>

            </LinearLayout>

            <!-- BUTTONS -->
            <LinearLayout android:id="@+id/buttons_layout"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="690dp">

                <com.github.clans.fab.FloatingActionButton android:id="@+id/button_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_info"
                    fab:fab_colorNormal="@color/colorAppBlue"
                    fab:fab_colorPressed="@color/colorAppRed"
                    fab:fab_colorRipple="#ff5252"
                    fab:fab_shadowColor="#444"/>

                <com.github.clans.fab.FloatingActionButton android:id="@+id/button_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_phone"
                    fab:fab_colorNormal="@color/colorAppBlue"
                    fab:fab_colorPressed="@color/colorAppRed"
                    fab:fab_colorRipple="#ff5252"
                    fab:fab_shadowColor="#444"/>

                <com.github.clans.fab.FloatingActionButton android:id="@+id/button_formation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_formation"
                    fab:fab_colorNormal="@color/colorAppBlue"
                    fab:fab_colorPressed="@color/colorAppRed"
                    fab:fab_colorRipple="#ff5252"
                    fab:fab_shadowColor="#444"/>

                <com.github.clans.fab.FloatingActionButton android:id="@+id/button_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_settings"
                    fab:fab_colorNormal="@color/colorAppBlue"
                    fab:fab_colorPressed="@color/colorAppRed"
                    fab:fab_colorRipple="#ff5252"
                    fab:fab_shadowColor="#444"/>

            </LinearLayout>

            <!-- ACTION MENU -->
            <com.github.clans.fab.FloatingActionMenu android:id="@+id/opt_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="105dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                fab:menu_labels_ellipsize="end"
                fab:menu_labels_singleLine="true"
                fab:menu_animationDelayPerItem="0"
                fab:menu_labels_position="left"
                fab:menu_openDirection="up"
                fab:menu_icon="@drawable/fab_add"
                fab:menu_colorNormal="@color/colorAppGreen"
                fab:menu_colorPressed="@color/colorAppYellow"
                fab:menu_colorRipple="#ffee58"
                fab:menu_shadowColor="#444">

                <com.github.clans.fab.FloatingActionButton android:id="@+id/menu_button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="@color/colorAppGreen"
                    fab:fab_colorPressed="@color/colorAppYellow"
                    fab:fab_colorRipple="#ffee58"
                    fab:fab_shadowColor="#444"
                    fab:fab_label="Accelerating"/>

                <com.github.clans.fab.FloatingActionButton android:id="@+id/menu_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="@color/colorAppGreen"
                    fab:fab_colorPressed="@color/colorAppYellow"
                    fab:fab_colorRipple="#ffee58"
                    fab:fab_shadowColor="#444"
                    fab:fab_label="Constant speed"/>

                <com.github.clans.fab.FloatingActionButton android:id="@+id/menu_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_map"
                    fab:fab_colorNormal="@color/colorAppGreen"
                    fab:fab_colorPressed="@color/colorAppYellow"
                    fab:fab_colorRipple="#ffee58"
                    fab:fab_shadowColor="#444"
                    fab:fab_label="Map type"/>

                <com.github.clans.fab.FloatingActionButton android:id="@+id/menu_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_qrcode"
                    fab:fab_colorNormal="@color/colorAppGreen"
                    fab:fab_colorPressed="@color/colorAppYellow"
                    fab:fab_colorRipple="#ffee58"
                    fab:fab_shadowColor="#444"
                    fab:fab_label="Scan QR code"/>

                <com.github.clans.fab.FloatingActionButton android:id="@+id/menu_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play"
                    fab:fab_colorNormal="@color/colorAppGreen"
                    fab:fab_colorPressed="@color/colorAppYellow"
                    fab:fab_colorRipple="#ffee58"
                    fab:fab_shadowColor="#444"
                    fab:fab_label="Disable tracking"/>

            </com.github.clans.fab.FloatingActionMenu>

            <!-- BOX NUM WIDGET -->
            <LinearLayout android:id="@+id/box_layout"
                android:orientation="vertical"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="420dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="693dp"
                android:layout_marginEnd="0dp">

                <TextView android:id="@+id/box_num_connected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:height="68dp"
                    android:gravity="center"
                    android:elevation="4dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/colorAppRed"
                    android:textColor="#fafafa"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:shadowColor="#757575"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="0" />

            </LinearLayout>

        </RelativeLayout>

        <!-- DEBUG -->
        <LinearLayout android:id="@+id/debug_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="5dp"
            android:focusableInTouchMode="false">

            <ScrollView android:id="@+id/textAreaScroller"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="vertical|horizontal"
                android:layout_weight="1">

                <TextView android:id="@+id/debug_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>



