<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_qr_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.preventium.boxpreventium.gui.QrScanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <fragment
            android:id="@+id/qr_scanner"
            android:name="com.google.android.gms.samples.vision.barcodereader.BarcodeCapture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:gvb_code_format="all_format"
            app:gvb_auto_focus="true"
            app:gvb_draw="true"
            app:gvb_flash="false"
            app:gvb_rect_colors="@array/rect_color">
        </fragment>

    </RelativeLayout>

   <LinearLayout android:id="@+id/buttons_action_layout"
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom|end"
       android:layout_marginTop="@dimen/buttons_layout_margin_top"
       android:layout_marginBottom="@dimen/buttons_layout_margin_bottom"
       android:layout_marginEnd="@dimen/buttons_layout_margin_end"
       android:layout_marginStart="@dimen/buttons_layout_margin_start">

       <com.github.clans.fab.FloatingActionButton
           android:id="@+id/button_qr_driver"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="2dp"
           android:src="@drawable/ic_account"
           fab:fab_colorNormal="@color/colorAppBlue"
           fab:fab_colorPressed="@color/colorAppRed"
           fab:fab_shadowColor="#444"/>

       <com.github.clans.fab.FloatingActionButton
           android:id="@+id/button_qr_vehicle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="2dp"
           android:src="@drawable/ic_car"
           fab:fab_colorNormal="@color/colorAppBlue"
           fab:fab_colorPressed="@color/colorAppRed"
           fab:fab_shadowColor="#444"/>

       <com.github.clans.fab.FloatingActionButton
           android:id="@+id/button_qr_flash"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="2dp"
           android:src="@drawable/ic_flashlight"
           fab:fab_colorNormal="@color/colorAppGreen"
           fab:fab_colorPressed="@color/colorAppRed"
           fab:fab_shadowColor="#444"/>

       <com.github.clans.fab.FloatingActionButton
           android:id="@+id/button_qr_close"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="2dp"
           android:src="@drawable/mr_ic_close_dark"
           fab:fab_colorNormal="@color/colorAppRed"
           fab:fab_colorPressed="@color/colorAppGreen"
           fab:fab_shadowColor="#444"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>