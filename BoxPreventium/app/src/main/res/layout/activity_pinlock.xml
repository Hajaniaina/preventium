<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/lock_image"
        android:layout_width="@dimen/pinlock_ic_size"
        android:layout_height="@dimen/pinlock_ic_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pinlock_margin_top"
        android:elevation="4dp"
        android:tint="@color/colorAppGreen"
        android:src="@drawable/ic_lock">
    </ImageView>

    <com.andrognito.pinlockview.IndicatorDots
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lock_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pinlock_dots_margin_top"
        app:dotEmptyBackground="@color/colorAppRed"
        app:dotFilledBackground="@color/colorAppGreen"
        app:dotSpacing="@dimen/pinlock_dots_spacing"
        app:dotDiameter="@dimen/pinlock_dots_diameter">
    </com.andrognito.pinlockview.IndicatorDots>

    <com.andrognito.pinlockview.PinLockView
        android:id="@+id/pin_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator_dots"
        android:layout_marginTop="@dimen/pinlock_keypad_margin_top"
        android:paddingStart="@dimen/pinlock_keypad_padding_start"
        android:layout_centerHorizontal="true"
        app:keypadButtonSize="@dimen/pinlock_keypad_size"
        app:keypadTextSize="@dimen/pinlock_keypad_text_size"
        app:keypadVerticalSpacing="@dimen/pinlock_keypad_vertical_spacing"
        app:keypadHorizontalSpacing="@dimen/pinlock_keypad_horizontal_spacing"
        app:keypadShowDeleteButton="false"
        app:keypadTextColor="@color/mine_shaft"
        app:pinLength="4">
    </com.andrognito.pinlockview.PinLockView>

</RelativeLayout>
